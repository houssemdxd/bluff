    <title>Card Game - Modern Design</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700;900&family=Rajdhani:wght@300;400;600;700&family=Exo+2:wght@300;400;600;800&display=swap" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body, html {
            height: 100%;
            width: 100%;
            overflow-x: hidden;
            font-family: 'Rajdhani', sans-serif;
        }

        body {
            background: linear-gradient(135deg, #0a0a23 0%, #1a1a3e 25%, #2d1b69 50%, #1a1a3e 75%, #0a0a23 100%);
            background-size: 400% 400%;
            animation: cyberGradient 20s ease infinite;
            height: 97%;
            display: flex;
            flex-direction: column;
            justify-content: center;
            position: relative;
        }

        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: 
                radial-gradient(circle at 20% 80%, rgba(0, 255, 255, 0.15) 0%, transparent 50%),
                radial-gradient(circle at 80% 20%, rgba(255, 0, 255, 0.15) 0%, transparent 50%),
                radial-gradient(circle at 40% 40%, rgba(0, 255, 127, 0.1) 0%, transparent 50%);
            pointer-events: none;
            z-index: -1;
        }

        body::after {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: 
                radial-gradient(2px 2px at 25px 35px, rgba(0, 255, 255, 0.3), transparent),
                radial-gradient(1px 1px at 45px 75px, rgba(255, 0, 255, 0.2), transparent),
                radial-gradient(1px 1px at 95px 45px, rgba(0, 255, 127, 0.25), transparent);
            background-repeat: repeat;
            background-size: 120px 120px;
            animation: particleFloat 25s linear infinite;
            pointer-events: none;
            z-index: -1;
        }

        @keyframes cyberGradient {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }

        @keyframes particleFloat {
            0% { transform: translateY(0px) rotate(0deg); }
            100% { transform: translateY(-120px) rotate(360deg); }
        }

        .table > :not(caption) > * > * {
            background-color: initial !important;
        }

        .box1 {
            position: absolute;
            top: 12%;
            width: 85%;
            background: linear-gradient(135deg, rgba(0, 255, 255, 0.1) 0%, rgba(255, 0, 255, 0.1) 100%);
            align-self: center;
            z-index: 10;
            display: flex;
            flex-wrap: wrap;
            justify-content: space-around;
            padding: 30px;
            border-radius: 25px;
            border: 2px solid transparent;
            background-clip: padding-box;
            backdrop-filter: blur(15px);
            box-shadow: 
                0 0 40px rgba(0, 255, 255, 0.3),
                inset 0 0 40px rgba(255, 255, 255, 0.05);
            position: relative;
        }

        .box1::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(45deg, #00ffff, #ff00ff, #00ff7f, #00ffff);
            background-size: 200% 200%;
            border-radius: 25px;
            padding: 2px;
            mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
            mask-composite: exclude;
            animation: borderGlow 3s linear infinite;
            z-index: -1;
        }

        @keyframes borderGlow {
            0% { background-position: 0% 50%; }
            100% { background-position: 200% 50%; }
        }

        .box2 {
            align-self: center;
            padding: 20px;
            padding-bottom: 0px;
            height: 99%;
            background: linear-gradient(145deg, rgba(15, 15, 35, 0.95) 0%, rgba(25, 25, 65, 0.95) 50%, rgba(15, 15, 35, 0.95) 100%);
            display: flex;
            flex-direction: column;
            border-radius: 30px;
            justify-content: center;
            margin-top: 1%;
            width: 92%;
            border: 2px solid rgba(0, 255, 255, 0.3);
            box-shadow: 
                0 25px 50px rgba(0, 0, 0, 0.7),
                inset 0 0 30px rgba(0, 255, 255, 0.1);
            backdrop-filter: blur(10px);
        }

        .table {
            height: 70%;
            min-height: 42%;
            display: flex;
            justify-content: center;
            flex-direction: row;
            background: linear-gradient(135deg, rgba(10, 10, 30, 0.9) 0%, rgba(20, 20, 50, 0.9) 100%);
            border-radius: 25px;
            border: 2px solid rgba(0, 255, 255, 0.4);
            box-shadow: 
                inset 0 0 40px rgba(0, 0, 0, 0.8),
                0 0 30px rgba(0, 255, 255, 0.2);
            position: relative;
            overflow: hidden;
        }

        .table::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: 
                repeating-linear-gradient(
                    45deg,
                    transparent,
                    transparent 3px,
                    rgba(0, 255, 255, 0.05) 3px,
                    rgba(0, 255, 255, 0.05) 6px
                );
            pointer-events: none;
        }

        .box3 {
            zoom: 120%;
            padding-left: 10%;
            padding-right: 10%;
            display: flex;
            justify-content: center;
            gap: 50px;
        }

        .card {
            min-width: 5%;
            min-height: 100px;
            position: relative;
            background-size: cover;
            background-repeat: no-repeat;
            background-position: center;
            width: 70px;
            background: linear-gradient(145deg, rgba(0, 255, 255, 0.1), rgba(255, 0, 255, 0.1));
            border-radius: 15px;
            border: 2px solid rgba(0, 255, 255, 0.3);
            box-shadow: 
                0 10px 20px rgba(0, 0, 0, 0.5),
                0 0 30px rgba(0, 255, 255, 0.2);
            transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
            cursor: pointer;
            overflow: hidden;
            backdrop-filter: blur(10px);
        }

        .card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(135deg, rgba(0, 255, 255, 0.2) 0%, rgba(255, 0, 255, 0.2) 100%);
            border-radius: 15px;
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .card:hover::before {
            opacity: 1;
        }

        .card:hover {
            transform: translateY(-20px) scale(1.08);
            box-shadow: 
                0 20px 40px rgba(0, 0, 0, 0.7),
                0 0 50px rgba(0, 255, 255, 0.5);
            border-color: rgba(0, 255, 255, 0.8);
        }

        .card .card-count {
            position: absolute;
            top: 5px;
            left: 5px;
            background: linear-gradient(135deg, #00ffff, #0080ff);
            color: #000;
            padding: 4px 8px;
            border-radius: 12px;
            font-size: 14px;
            font-weight: 700;
            box-shadow: 0 3px 10px rgba(0, 0, 0, 0.5);
            border: 1px solid rgba(255, 255, 255, 0.3);
            font-family: 'Orbitron', monospace;
        }

        .card.disabled {
            background: rgba(40, 40, 40, 0.8);
            cursor: not-allowed;
            opacity: 0.3;
            filter: grayscale(100%);
        }

        .cardchoice {
            width: 65px;
            height: 95px;
            background: linear-gradient(145deg, rgba(0, 255, 255, 0.15), rgba(255, 0, 255, 0.15));
            border: 2px solid rgba(0, 255, 255, 0.4);
            border-radius: 18px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 28px;
            font-weight: 800;
            cursor: pointer;
            transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
            color:rgb(26, 28, 28) !important;
            text-shadow: 0 0 10px rgba(0, 255, 255, 0.8);
            box-shadow: 
                0 8px 16px rgba(0, 0, 0, 0.4),
                inset 0 2px 4px rgba(255, 255, 255, 0.1);
            font-family: 'Orbitron', monospace;
            position: relative;
            overflow: hidden;
            backdrop-filter: blur(10px);
        }

        .cardchoice::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(135deg, rgba(0, 255, 255, 0.3) 0%, rgba(255, 0, 255, 0.3) 100%);
            opacity: 0;
            transition: opacity 0.3s ease;
            border-radius: 18px;
        }

        .cardchoice:hover::before {
            opacity: 1;
        }

        .cardchoice:hover {
            transform: scale(1.12) rotateZ(3deg);
            box-shadow: 
                0 15px 30px rgba(0, 0, 0, 0.6),
                0 0 40px rgba(0, 255, 255, 0.6);
            border-color: rgba(0, 255, 255, 0.8);
            text-shadow: 0 0 15px rgba(0, 255, 255, 1);
        }

        .content {
            padding: 25px;
            height: 400px;
            width: 88%;
            background: linear-gradient(135deg, rgba(10, 10, 30, 0.9) 0%, rgba(20, 20, 50, 0.9) 100%);
            align-self: center;
            border-radius: 30px;
            border: 2px solid rgba(0, 255, 255, 0.3);
            display: flex;
            box-shadow: 
                inset 0 0 50px rgba(0, 0, 0, 0.8),
                0 0 40px rgba(0, 255, 255, 0.2);
            position: relative;
            backdrop-filter: blur(10px);
        }

        .content::before {
            content: '';
            position: absolute;
            top: 12px;
            left: 12px;
            right: 12px;
            bottom: 12px;
            border: 1px solid rgba(0, 255, 255, 0.2);
            border-radius: 25px;
            pointer-events: none;
        }

        .containertable {
            padding: 25px;
            gap: 4%;
            display: flex;
            flex-direction: row;
            flex-wrap: wrap;
            justify-content: center;
            align-items: center;
        }

        .cardtable {
           
            width: 75px;
            height: 105px;
            box-shadow: 
                0 10px 20px rgba(0, 0, 0, 0.6),
                0 0 25px rgba(0, 255, 255, 0.2);
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
            backdrop-filter: blur(10px);
        }

        .cardtable::after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(135deg, rgba(0, 255, 255, 0.2) 0%, transparent 50%);
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .cardtable:hover::after {
            opacity: 1;
        }

        .cardtable:hover {
            transform: scale(1.08) rotateZ(3deg);
            box-shadow: 
                0 15px 30px rgba(0, 0, 0, 0.7),
                0 0 40px rgba(0, 255, 255, 0.4);
        }

        .cardtable img {
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.6) !important;
            height: 105px;
            width: 75px;
            border-radius: 15px;
            filter: contrast(1.2) saturate(1.3) hue-rotate(180deg);
        }

        .button-put {
            z-index: 9999999;
            position: absolute;
            width: 140px;
            height: 65px;
            background: linear-gradient(145deg, #00ff7f, #00cc66);
            bottom: 35%;
            left: 8%;
            border-radius: 20px;
            transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
            transform: rotate(12deg);
            border: 2px solid rgba(0, 255, 127, 0.6);
            box-shadow: 
                0 10px 20px rgba(0, 0, 0, 0.5),
                0 0 30px rgba(0, 255, 127, 0.4);
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #000;
            font-weight: 700;
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
            font-family: 'Exo 2', sans-serif;
            backdrop-filter: blur(10px);
        }

        .button-put h6 {
            margin: 0;
            font-size: 14px;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .button-put:hover {
            transform: rotate(12deg) scale(1.1);
            box-shadow: 
                0 15px 30px rgba(0, 0, 0, 0.7),
                0 0 50px rgba(0, 255, 127, 0.6);
            background: linear-gradient(145deg, #00ff9f, #00ff7f);
        }

        .button-lier {
            z-index: 99999;
            position: absolute;
            width: 140px;
            height: 65px;
            background: linear-gradient(145deg, #ff0080, #cc0066);
            bottom: 32%;
            right: 8%;
            border-radius: 20px;
            transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
            transform: rotate(-12deg);
            border: 2px solid rgba(255, 0, 128, 0.6);
            box-shadow: 
                0 10px 20px rgba(0, 0, 0, 0.5),
                0 0 30px rgba(255, 0, 128, 0.4);
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #fff;
            font-weight: 700;
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
            font-family: 'Exo 2', sans-serif;
            backdrop-filter: blur(10px);
        }

        .button-lier::before {
            content: '⚡ LIAR!';
            font-size: 14px;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .button-lier:hover {
            transform: rotate(-12deg) scale(1.1);
            box-shadow: 
                0 15px 30px rgba(0, 0, 0, 0.7),
                0 0 50px rgba(255, 0, 128, 0.6);
            background: linear-gradient(145deg, #ff00a0, #ff0080);
        }

        .avatar {
            height: 85px;
            border-radius: 50%;
            align-self: center;
            background: linear-gradient(135deg, rgba(0, 255, 255, 0.2), rgba(255, 0, 255, 0.2));
            width: 85px;
            margin: 10px;
            display: none;
            border: 3px solid rgba(0, 255, 255, 0.5);
            box-shadow: 
                0 10px 20px rgba(0, 0, 0, 0.5),
                inset 0 2px 6px rgba(255, 255, 255, 0.1);
            z-index: 99999999999;
            position: relative;
            overflow: hidden;
            backdrop-filter: blur(10px);
        }

        .avatar::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: radial-gradient(circle at 30% 30%, rgba(255, 255, 255, 0.3) 0%, transparent 70%);
        }

        .avatar img {
            height: inherit;
            width: inherit;
            border-radius: 50%;
            display: block;
            margin: 0;
            padding: 0;
            border: none;
            filter: contrast(1.2) saturate(1.3);
        }

        .highlight-transition {
            animation: cyberPulse 1.5s ease-in-out infinite alternate;
            border-color: #00ffff !important;
            box-shadow: 
                0 0 40px rgba(0, 255, 255, 0.8),
                0 0 60px rgba(0, 255, 255, 0.4) !important;
        }

        @keyframes cyberPulse {
            0% {
                box-shadow: 
                    0 0 30px rgba(0, 255, 255, 0.6),
                    0 0 50px rgba(0, 255, 255, 0.3);
            }
            100% {
                box-shadow: 
                    0 0 50px rgba(0, 255, 255, 1),
                    0 0 100px rgba(0, 255, 255, 0.6);
            }
        }

        #goalup {
            font-size: 3rem;
            color: #00ffff;
            text-shadow: 
                0 0 20px rgba(0, 255, 255, 0.8),
                0 0 40px rgba(0, 255, 255, 0.4);
            margin: 20px 0;
            text-align: center;
            font-family: 'Orbitron', monospace;
            font-weight: 900;
            letter-spacing: 4px;
            animation: goalCyberGlow 2s ease-in-out infinite alternate;
        }

        @keyframes goalCyberGlow {
            0% { 
                text-shadow: 
                    0 0 20px rgba(0, 255, 255, 0.8),
                    0 0 40px rgba(0, 255, 255, 0.4);
            }
            100% { 
                text-shadow: 
                    0 0 30px rgba(0, 255, 255, 1),
                    0 0 60px rgba(0, 255, 255, 0.6),
                    0 0 90px rgba(0, 255, 255, 0.3);
            }
        }

        .top-panel {
            display: flex;
            gap: 18px;
            margin-bottom: 18px;
            justify-content: center;
            padding: 25px;
        }

        .card-number {
            width: 65px;
            height: 95px;
            background: linear-gradient(145deg, rgba(0, 255, 255, 0.15), rgba(255, 0, 255, 0.15));
            border-radius: 18px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2rem;
            color: #00ffff;
            border: 2px solid rgba(0, 255, 255, 0.4);
            transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
            font-family: 'Orbitron', monospace;
            font-weight: 700;
            text-shadow: 0 0 10px rgba(0, 255, 255, 0.8);
            box-shadow: 
                0 8px 16px rgba(0, 0, 0, 0.4),
                inset 0 2px 6px rgba(255, 255, 255, 0.1);
            cursor: pointer;
            backdrop-filter: blur(10px);
        }

        .card-number:hover {
            transform: translateY(-8px) scale(1.08);
            box-shadow: 
                0 12px 24px rgba(0, 0, 0, 0.6),
                0 0 35px rgba(0, 255, 255, 0.4);
        }

        .card-number.active {
            background: linear-gradient(145deg, rgba(255, 0, 128, 0.3), rgba(0, 255, 255, 0.3));
            border-color: #ff0080;
            box-shadow: 
                0 10px 20px rgba(0, 0, 0, 0.6),
                0 0 40px rgba(255, 0, 128, 0.6);
            transform: scale(1.12);
            color: #ff0080;
            text-shadow: 0 0 15px rgba(255, 0, 128, 0.8);
        }

        .stats {
            display: flex;
            flex-direction: column;
            align-items: flex-end;
            position: absolute;
            top: 35px;
            right: 45px;
            font-size: 1.3rem;
            color: #00ffff;
            text-shadow: 0 0 10px rgba(0, 255, 255, 0.8);
            font-family: 'Rajdhani', sans-serif;
            font-weight: 600;
        }

        .stats div {
            margin-bottom: 10px;
            padding: 10px 18px;
            background: rgba(0, 255, 255, 0.1);
            border-radius: 12px;
            border: 2px solid rgba(0, 255, 255, 0.3);
            backdrop-filter: blur(10px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
        }

        .target-display {
            margin-top: 35px;
            border: 4px solid rgba(0, 255, 255, 0.6);
            border-radius: 50%;
            width: 280px;
            height: 280px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2.5rem;
            color: #00ffff;
            background: radial-gradient(circle, rgba(10, 10, 30, 0.9) 0%, rgba(20, 20, 50, 0.9) 100%);
            box-shadow: 
                0 0 50px rgba(0, 255, 255, 0.4),
                inset 0 0 40px rgba(0, 0, 0, 0.8);
            font-family: 'Orbitron', monospace;
            font-weight: 900;
            text-shadow: 0 0 20px rgba(0, 255, 255, 0.8);
            animation: targetCyberPulse 3s ease-in-out infinite;
            backdrop-filter: blur(10px);
        }

        @keyframes targetCyberPulse {
            0%, 100% { 
                box-shadow: 
                    0 0 50px rgba(0, 255, 255, 0.4),
                    inset 0 0 40px rgba(0, 0, 0, 0.8);
            }
            50% { 
                box-shadow: 
                    0 0 80px rgba(0, 255, 255, 0.8),
                    0 0 120px rgba(0, 255, 255, 0.3),
                    inset 0 0 50px rgba(0, 0, 0, 0.9);
            }
        }

        .bottle {
            width: 130px;
            height: 220px;
            position: absolute;
            right: 25px;
            top: 130px;
        }

        .bottle-shape {
            width: 85px;
            height: 190px;
            background: rgba(10, 10, 30, 0.7);
            border: 3px solid rgba(0, 255, 255, 0.4);
            border-radius: 18px 18px 45px 45px;
            position: relative;
            overflow: hidden;
            margin: 0 auto;
            box-shadow: 
                inset 0 0 30px rgba(0, 0, 0, 0.8),
                0 0 25px rgba(0, 255, 255, 0.3);
            backdrop-filter: blur(15px);
        }

        .water {
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            background: linear-gradient(to top, #ff0080 0%, #00ffff 50%, #00ff7f 100%);
            transition: height 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94);
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: flex-start;
            gap: 10px;
            padding-top: 12px;
            box-shadow: 0 0 30px rgba(0, 255, 255, 0.4);
        }

        .selected-number {
            font-size: 18px;
            color: red;
            font-weight: 800;
            text-shadow: 1px 1px 2px rgba(255, 23, 58, 0.3);
            animation: numberCyberFloat 2s infinite ease-in-out;
            font-family: 'Orbitron', monospace;
        }

        @keyframes numberCyberFloat {
            0%, 100% { transform: translateY(0) rotate(0deg); }
            50% { transform: translateY(-8px) rotate(3deg); }
        }

 
